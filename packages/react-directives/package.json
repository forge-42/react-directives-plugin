{
	"name": "react-directives",
	"version": "1.0.0",
	"description": "Minimal open-source stack to help you ship an open-source package in TS",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"import": "./dist/index.js",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"import": "./dist/index.cjs",
				"require": "./dist/index.cjs"
			}
		}
	},
	"scripts": {
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"build": "tsdown src/index.ts --config tsdown.config.ts --clean",
		"dev": "tsdown src/index.ts --config tsdown.config.ts --watch",
		"prepublishOnly": "pnpm run build",
		"typecheck": "tsc",
		"validate": "pnpm run check && pnpm run typecheck && pnpm run test",
		"check:exports": "attw --pack ."
	},
	"author": "",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/forge-42/react-directives.git"
	},
	"bugs": {
		"url": "https://github.com/forge-42/react-directives/issues"
	},
	"files": [
		"dist"
	],
	"homepage": "https://github.com/forge-42/react-directives#readme",
	"publishConfig": {
		"provenance": true
	},
	"peerDependencies": {
		"vite": ">=5.0.0"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.17.4",
		"@changesets/cli": "^2.29.0",
		"@types/babel__core": "^7.20.5",
		"@types/babel__generator": "^7.27.0",
		"@types/babel__traverse": "^7.20.7",
		"@types/node": "^20.17.30",
		"@types/picomatch": "^4.0.0",
		"@vitest/coverage-v8": "^3.1.1",
		"happy-dom": "^17.4.4",
		"tsdown": "^0.9.1",
		"typescript": "^5.8.3",
		"vitest": "^3.1.1"
	},
	"dependencies": {
		"@babel/core": "^7.26.10",
		"@babel/generator": "^7.26.10",
		"@babel/parser": "^7.26.10",
		"@babel/traverse": "^7.26.10",
		"@babel/types": "^7.26.10",
		"picomatch": "^4.0.2"
	}
}